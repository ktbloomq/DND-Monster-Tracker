{
  "name": "dnd-monster-tracker",
  "description": "DND monster tracker tool",
  "author": "Kevin Bloomquist",
  "version": "0.2.0",
  "private": true,
  "main": "electron/main.mjs",
  "homepage": "./",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none next dev\" \"npm run electron:start\"",
    "electron:build": "npm run build && electron-builder",
    "electron:start": "wait-on tcp:3000 && electron --enable-features=UseOzonePlatform --ozone-platform=wayland ."
  },
  "build": {
    "appId": "com.bloomquist.dnd-monster-tracker",
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "electron-serve": "^2.0.0",
    "next": "14.1.3",
    "react": "^18",
    "react-dom": "^18",
    "url": "^0.11.4",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.19",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.3",
    "eslint-plugin-react": "^7.35.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5"
  }
}
